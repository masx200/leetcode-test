{
    "compilerOptions": {
        "strict": true
    },
    "importMap": "import_map.json",
    "tasks": {
        "udd": "udd  '*/*.ts' '*.ts'",
        "install-udd": "deno install -A -f -n udd https://deno.land/x/udd@0.7.3/main.ts",
        "fmt": "deno fmt --config deno.json",
        "test": "deno test --config deno.json",
        "lint": "deno lint --config deno.json",
        "check": "deno run  -A check.ts"
    },
    "fmt": {
        "options": {
            "indentWidth": 4,
            "singleQuote": false
        }
    }
}
